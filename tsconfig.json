{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "allowJs": true,
    "strictNullChecks": true,
    "declaration": true /* Generates corresponding '.d.ts' file. */,
    "sourceMap": true,
    "moduleResolution": "Node" /* For external @types/* packages */
  },
  "include": ["src/index.ts", "src/types.ts"],
  "exclude": ["src/__tests__/*"]
}
